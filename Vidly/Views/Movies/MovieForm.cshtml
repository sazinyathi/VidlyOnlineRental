@model Vidly.ViewModels.MovieViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Form</h2>
<hr />

@using (@Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.Name)
        @Html.TextBoxFor(m => m.Movies.Name, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movies.DateAdded)
        @Html.TextBoxFor(m => m.Movies.DateAdded, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.ReleaseDate)
        @Html.TextBoxFor(m => m.Movies.ReleaseDate, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.NumberInStock)
        @Html.TextBoxFor(m => m.Movies.NumberInStock, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movies.GenreId)
        @Html.DropDownListFor(m => m.Movies.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre Types", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(x =>x.Movies.Id)

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>


}

