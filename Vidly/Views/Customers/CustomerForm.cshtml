@model Vidly.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Form</h2>


<hr />

@using(Html.BeginForm("Save","Customers"))
{
<div class="form-group">
    @Html.LabelFor(m => m.Customers.Name)
    @Html.TextBoxFor( m => m.Customers.Name,new { @class="form-control"})

</div>
<div class="form-group">
    @Html.LabelFor(m => m.Customers.BirthDayDate)
    @Html.TextBoxFor(m => m.Customers.BirthDayDate,"{0:d MMM yyyy}", new { @class = "form-control" })

</div>
<div class="form-group">
    @Html.LabelFor(m => m.MembershipTypeId)
    @Html.DropDownListFor(m => m.MembershipTypeId, new SelectList(Model.MembershipTypes,"Id","Name"),"Select Membership Type", new { @class = "form-control" })

</div>
<div class="checkbox">
    <label>
        @Html.CheckBoxFor(m => m.Customers.IsSubscribedToNewsLetter) Subscribed to NewsLetter?
    </label>
</div>
  @Html.HiddenFor( m => m.Customers.Id)
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div>


}

